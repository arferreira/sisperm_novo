<%- model_class = Scale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:stay_id) %>:</strong></dt>
  <dd><%= @scale.stay_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day_scale) %>:</strong></dt>
  <dd><%= @scale.day_scale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:month_scale) %>:</strong></dt>
  <dd><%= @scale.month_scale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_scale) %>:</strong></dt>
  <dd><%= @scale.year_scale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @scale.status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              scales_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_scale_path(@scale), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              scale_path(@scale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
