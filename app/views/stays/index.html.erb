<%- model_class = Stay -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:"Código") %></th>
      <th><%= model_class.human_attribute_name(:"Usuário") %></th>
      <th><%= model_class.human_attribute_name(:"Nome") %></th>
      <th><%= model_class.human_attribute_name(:Situação) %></th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @stays.each do |stay| %>
      <tr>
        <td><%= link_to stay.id, stay_path(stay) %></td>
        <td><%= stay.user_id %></td>
        <td><%= stay.name %></td>
        <% if stay.status %>
        <td style="color:green;">Ativo</td>
        <% else %>
        <td style="color:red;">Inativo</td>
        <% end %>
        <td>
          <%= link_to 'Editar',
                      edit_stay_path(stay), :class => 'btn btn-primary btn-xs' %>
          <%= link_to 'Excluir',
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-primary btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Incluir novo',
            new_stay_path,
            :class => 'btn btn-primary' %>
